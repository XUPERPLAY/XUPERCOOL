<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8"/>
  <title>1000 Canales – Solo Reproductor</title>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <style>
    html,body{margin:0;height:100%;background:#000;color:#fff;font-family:Arial}
    .header{background:#111;padding:6px 12px;text-align:center;font-size:16px}
    .container{display:flex;height:calc(100% - 40px)}
    /* Visor centrado y responsive */
    .visor{flex:3;display:flex;justify-content:center;align-items:center;background:#000}
    #player{width:100%;max-width:960px;height:100%;max-height:540px;border:0}
    /* Panel de canales más ancho */
    .channels-container{flex:1.5;min-width:240px;padding:10px;background:#222;overflow-y:auto}
    .btn{display:block;margin:4px 0;padding:8px 12px;background:#007BFF;color:#fff;border:none;border-radius:4px;width:100%;cursor:pointer;font-size:15px}
    .btn:hover{background:#0056b3}
    @media(max-width:768px){.container{flex-direction:column}#player{max-height:40vh}}
  </style>
</head>
<body>
  <div class="header">1000 Canales – Solo Reproductor</div>
  <div class="container">
    <div class="visor">
      <iframe id="player" allow="autoplay; fullscreen" allowfullscreen></iframe>
    </div>
    <div id="channelsList" class="channels-container"></div>
  </div>

  <script>
    const total = 1000;
    const perPage = 50;
    let current = 1;

    function createButtons(from, to){
      const wrap = document.getElementById('channelsList');
      for(let i = from; i <= to; i++){
        const b = document.createElement('button');
        b.className = 'btn';
        b.textContent = `Canal ${i}`;
        b.onclick = () => load(i);
        wrap.appendChild(b);
      }
    }

    function load(n){
      document.getElementById('player').src = `https://thedaddy.to/embed/stream-${n}.php`;
    }

    // Carga inicial
    createButtons(1, perPage);
    load(1);

    // Carga más canales al scroll
    document.getElementById('channelsList').addEventListener('scroll', e=>{
      if(e.target.scrollTop + e.target.clientHeight >= e.target.scrollHeight - 10){
        if(current < total){
          const from = current + 1;
          const to   = Math.min(current + perPage, total);
          createButtons(from, to);
          current = to;
        }
      }
    });
  </script>
</body>
</html>
